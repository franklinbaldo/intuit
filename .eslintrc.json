{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "plugins": ["html"],
  "rules": {
    "prettier/prettier": "warn",
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["tests/**/*.js"],
      "env": {
        "node": true,
        "commonjs": true
      }
    }
  ],
  "globals": {
    "atob": "readonly",
    "htmz": "readonly",
    "decodeBase64": "readonly",
    "renderHTML": "readonly"
  }
}
